@model IEnumerable<DayOfficev2.Models.tblAmenidadEspacio>

@{
    ViewBag.Title = "Index";
}

<h2>Amenidades en el Espacio</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Amenidad:
        </th>
        <th>
            Espacio:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tblAmenidades.TipoAmenidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblEspacio.NombreEspacio)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdAmenidadEspcio }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdAmenidadEspcio }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdAmenidadEspcio })
        </td>
    </tr>
}

</table>
